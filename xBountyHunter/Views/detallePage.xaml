<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="xBountyHunter.Views.detallePage">
    <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="FillAndExpand" Orientation="Vertical">
        <Label FontSize="20" HorizontalOptions="Center">Atrapado!!!</Label>
        <StackLayout Orientation="Vertical" HorizontalOptions="Center" WidthRequest="100"
                     HeightRequest="100" BackgroundColor="Gray">
            <Image x:Name="img" Aspect="Fill" WidthRequest="100" HeightRequest="100"/>
        </StackLayout>
        <Button HorizontalOptions="Center" Text="Eliminar" Clicked="Button_Clicked"></Button>
    </StackLayout>
</ContentPage>